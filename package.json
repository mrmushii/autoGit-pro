{
  "name": "autogit-pro",
  "displayName": "AutoGit Pro",
  "description": "Automate Git workflows with AI-powered commit message generation",
  "version": "1.1.2",
  "publisher": "autogit-pro",
  "author": {
    "name": "Mushfiqur Rahman",
    "url": "https://github.com/mrmushii"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "SCM Providers",
    "Other"
  ],
  "keywords": [
    "git",
    "commit",
    "automation",
    "ai",
    "productivity",
    "groq",
    "openai",
    "gemini"
  ],
  "icon": "images/icon.png",
  "galleryBanner": {
    "color": "#1e1e1e",
    "theme": "dark"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mrmushii/autogit-pro"
  },
  "homepage": "https://github.com/mrmushii/autogit-pro#readme",
  "bugs": {
    "url": "https://github.com/mrmushii/autogit-pro/issues"
  },
  "activationEvents": [
    "onCommand:autogit-pro.commit",
    "onCommand:autogit-pro.quickCommit",
    "onCommand:autogit-pro.pull"
  ],

  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "autogit-pro.commit",
        "title": "AutoGit Pro: Commit & Push"
      },
      {
        "command": "autogit-pro.quickCommit",
        "title": "AutoGit Pro: Quick Commit (AI Message)"
      },
      {
        "command": "autogit-pro.pull",
        "title": "AutoGit Pro: Pull from Remote"
      },
      {
        "command": "autogit-pro.manageTemplates",
        "title": "AutoGit Pro: Manage Commit Templates"
      },
      {
        "command": "autogit-pro.showStats",
        "title": "AutoGit Pro: Show My Stats"
      }
    ],

    "keybindings": [
      {
        "command": "autogit-pro.commit",
        "key": "ctrl+alt+g",
        "mac": "cmd+alt+g"
      },
      {
        "command": "autogit-pro.quickCommit",
        "key": "ctrl+shift+alt+c",
        "mac": "cmd+shift+alt+c"
      },
      {
        "command": "autogit-pro.pull",
        "key": "ctrl+shift+alt+p",
        "mac": "cmd+shift+alt+p"
      }
    ],

    "configuration": {
      "title": "AutoGit Pro",
      "properties": {
        "autogit-pro.aiProvider": {
          "type": "string",
          "default": "groq",
          "enum": [
            "openai",
            "gemini",
            "groq",
            "none"
          ],
          "enumDescriptions": [
            "Use OpenAI GPT for commit message generation",
            "Use Google Gemini for commit message generation",
            "Use Groq (FREE) for commit message generation - Recommended!",
            "Disable AI commit message generation"
          ],
          "description": "AI provider for generating commit messages"
        },
        "autogit-pro.openaiApiKey": {
          "type": "string",
          "default": "",
          "description": "OpenAI API key for commit message generation"
        },
        "autogit-pro.openaiModel": {
          "type": "string",
          "default": "gpt-4o-mini",
          "description": "OpenAI model to use for commit message generation"
        },
        "autogit-pro.geminiApiKey": {
          "type": "string",
          "default": "",
          "description": "Google Gemini API key for commit message generation"
        },
        "autogit-pro.geminiModel": {
          "type": "string",
          "default": "gemini-2.0-flash-001",
          "description": "Gemini model to use for commit message generation"
        },
        "autogit-pro.groqApiKey": {
          "type": "string",
          "default": "",
          "description": "Groq API key for commit message generation (FREE - Get it at console.groq.com)"
        },
        "autogit-pro.groqModel": {
          "type": "string",
          "default": "llama-3.1-8b-instant",
          "description": "Groq model to use for commit message generation"
        },
        "autogit-pro.defaultRemote": {
          "type": "string",
          "default": "origin",
          "description": "Default remote name for push operations"
        },
        "autogit-pro.autoStageAll": {
          "type": "boolean",
          "default": true,
          "description": "Automatically stage all changes before commit"
        },
        "autogit-pro.confirmBeforePush": {
          "type": "boolean",
          "default": true,
          "description": "Show confirmation dialog before pushing"
        },
        "autogit-pro.pushAfterCommit": {
          "type": "boolean",
          "default": true,
          "description": "Automatically push after successful commit"
        },
        "autogit-pro.commitMessageTemplate": {
          "type": "string",
          "default": "",
          "description": "Custom template for commit messages. Use {type}, {scope}, {subject} placeholders."
        },
        "autogit-pro.commitStyle": {
          "type": "string",
          "enum": [
            "basic",
            "conventional",
            "detailed"
          ],
          "enumDescriptions": [
            "Short one-line message (max 72 chars)",
            "Conventional Commits format with type and optional scope (e.g., feat(auth): add login)",
            "Detailed multi-line message with subject and bullet-point body"
          ],
          "default": "conventional",
          "description": "Style of AI-generated commit messages"
        },
        "autogit-pro.includeScope": {
          "type": "boolean",
          "default": true,
          "description": "Include scope in conventional commits (e.g., feat(auth): ... vs feat: ...)"
        },
        "autogit-pro.multiRepoMode": {
          "type": "string",
          "enum": [
            "ask",
            "all",
            "active"
          ],
          "enumDescriptions": [
            "Ask which repository to commit to when multiple are found",
            "Commit to all repositories in the workspace",
            "Automatically use the repository of the active file"
          ],
          "default": "ask",
          "description": "How to handle multiple Git repositories in the workspace"
        },
        "autogit-pro.scanNestedRepos": {
          "type": "boolean",
          "default": false,
          "description": "Scan for nested Git repositories (useful for monorepos with sub-projects)"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "package": "vsce package",
    "publish": "vsce publish"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "@vscode/vsce": "^2.22.0",
    "eslint": "^8.55.0",
    "typescript": "^5.3.0"
  },
  "dependencies": {}
}
